        protection.o pseudo_c.o pwd.o read.o rename.o rindex.o rmdir.o select.o \
        setjmp.o siglist.o signal.o signals.o sigpause.o sigsetmask.o sleep.o \
        stat.o strftime.o strtol.o strtoll.o longlong.o snprintf.o time.o \
        timeconvert.o timers.o truncate.o uid.o \
        umask.o unlink.o utime.o vsnprintf.o wait4.o write.o \
        dup.o dup2.o getopt.o gettimeofday.o usleep.o uname.o \
        symlink.o readlink.o popen.o pclose.o strdup.o strcasecmp.o strncasecmp.o \
        strnlen.o mkstemp.o fsync.o sysconf.o \
        pathconf.o fpathconf.o getdtablesize.o setuid.o setgid.o getuid.o getgid.o \
        geteuid.o getegid.o getlogin.o setpgid.o setsid.o nice.o wait.o waitpid.o \
        fork.o pread.o pwrite.o lstat.o fchown.o tzset.o getpass.o basename.o \
        dirname.o strsep.o strcoll.o strlcpy.o strlcat.o fnmatch.o \
        glob.o scandir.o asprintf.o vasprintf.o err.o ffs.o

# List of Assembly object files
ASMOBJS = child.o sprintf.o _setjmp.o

# All object files combined
ALLOBJS = $(OBJS) $(ASMOBJS)

# Compiler and Assembler flags
# Using GST (Global Symbol Table) for faster compilation
INCS     = INCDIR=include/internal/ INCDIR=include/ INCDIR=include:
OPTIMIZE = OPTIMIZE

CFLAGS   = $(INCS) $(OPTIMIZE) NOICONS UTILLIB IGNORE=84 IGNORE=224
ASMFLAGS = 

## Main Targets

all: unix.lib

unix.lib: $(ALLOBJS)
    -delete >NIL: $@
    oml $@ a $(ALLOBJS)

clean:
    -delete quiet $(ALLOBJS) unix.lib


## Implicit Suffix Rules

# smake has a built-in rule for .c.o:
# $(CC) $(CFLAGS) -c $< -o $@

# Rule to assemble .asm files into .o object files
.asm.o:
    $(ASM) $< -o $@ $(ASMFLAGS)


## Explicit Dependencies

# Assembly files
child.o: child.asm
sprintf.o: sprintf.asm
_setjmp.o: _setjmp.asm

