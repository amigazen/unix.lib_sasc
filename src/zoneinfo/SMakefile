CC= sc
SCOPTS=	CPU=ANY MCCONS IDLEN=100 STREQ DEFINE TM_GMTOFF=tm_gmtoff \
	DEFINE TM_ZONE=tm_zone DEFINE emkdir=mkdir DEFINE NOSOLAR \
	NOVER NOICONS IDIR=//include IGNORE=94,104,315,317

all: SCOPTIONS zic

SCOPTIONS: SMakefile
	copy to $@ <from <
$(SCOPTS)
<

zic: zic.o ialloc.o
	$(CC) zic.o ialloc.o link to zic lib=/unix.lib

clean:
	-delete QUIET \#?.(o|lnk) SCOPTIONS

zic.o: zic.c
ialloc.o: ialloc.c
