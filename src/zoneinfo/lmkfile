CFLAGS=	-dTM_GMTOFF=tm_gmtoff -dTM_ZONE=tm_zone -demkdir=mkdir -dNOSOLAR \
	-isrc:unix/include/ -j104 -d3

all: zic

zic: zic.o ialloc.o getopt.o
	blink from lib:c.o zic.o ialloc.o getopt.o to zic \
	lib src:unix/src/unix.lib lib:lc.lib lib:amiga.lib sc sd batch

zic.o: zic.c
ialloc.o: ialloc.c
getopt.o: getopt.c getopt.h

